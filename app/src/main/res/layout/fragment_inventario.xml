<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEFF1"
    tools:context=".ui.inventario.InventarioFragment">

    <include
        android:id="@+id/header_main"
        layout="@layout/header_main" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Action Buttons -->
            <LinearLayout
                android:id="@+id/inventory_action_buttons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/button_action_add_product"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/inventory_action_add"
                        android:src="@drawable/ic_additem" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/inventory_action_add" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/button_action_modify_product"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/inventory_action_modify"
                        android:src="@drawable/ic_additem" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/inventory_action_modify" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/button_action_delete_product"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/inventory_action_delete"
                        android:src="@drawable/ic_additem" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/inventory_action_delete" />
                </LinearLayout>

            </LinearLayout>

            <!-- Stock List Title -->
            <TextView
                android:id="@+id/stock_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/inventory_stock_list_title"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

            <!-- Stock Items Container -->
            <LinearLayout
                android:id="@+id/stock_items_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:divider="@drawable/divider"
                android:orientation="vertical"
                android:showDividers="middle">

                <!-- Product 1 -->
                <include layout="@layout/item_product_stock" />
                <!-- Product 2 -->
                <include layout="@layout/item_product_stock" />
                <!-- Product 3 -->
                <include layout="@layout/item_product_stock" />
                <!-- Product 4 -->
                <include layout="@layout/item_product_stock" />
                <!-- Product 5 -->
                <include layout="@layout/item_product_stock" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>